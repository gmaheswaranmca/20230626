@model FlightSystemProject.Models.Flight


@{
    ViewBag.Title = "Add New Flight";
}
<div>
    @Html.ActionLink("Go Back To Display All Flights Page",
                    "Index", "FlightManagement", new { },
                    htmlAttributes: new { @class = "btn btn-success" })
</div>

<h2>@ViewBag.Title</h2>
<hr />

<!--  1. form, 2.form-group repeated, 3.submit button, 4.anty forgery token -->
@using (Html.BeginForm())
{
    <span>@Html.AntiForgeryToken()</span>
<div>
    <div class="form-group">
        @Html.LabelFor(m => m.AirlineName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.AirlineName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.AirlineName, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FlightNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.FlightNumber, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.FlightNumber, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Source, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Source, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Source, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Destination, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.Destination, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Destination, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TravelDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.TravelDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.TravelDate, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumberOfSeats, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.NumberOfSeats, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.NumberOfSeats, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TicketFare, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.TicketFare, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.TicketFare, "", htmlAttributes: new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create New Flight"/>
    </div>
</div>
}