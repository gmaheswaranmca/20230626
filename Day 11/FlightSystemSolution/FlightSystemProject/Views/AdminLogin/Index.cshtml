@model FlightSystemProject.Models.Admin
@{
    ViewBag.Title = "Login";
}


<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    <span>@Html.AntiForgeryToken()</span>
    <div>
        @Html.ValidationSummary(false,"", htmlAttributes: new {@class=""})
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Username, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, htmlAttributes : new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.Password, "", htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-primary col-md-12" />
        </div>
    </div>
}



